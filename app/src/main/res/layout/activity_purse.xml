<?xml version="1.0" encoding="utf-8"?>
<com.example.huanpet.custom.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.huanpet.view.purse.PurseActivity">
<com.example.huanpet.custom.PercentLinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_heightPercent="8%">
    <com.example.huanpet.utils.CustomTool
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/purse_custom"
        ></com.example.huanpet.utils.CustomTool>
</com.example.huanpet.custom.PercentLinearLayout>
    <!--"钱包"-->
    <com.example.huanpet.custom.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="25%"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="20%"
            android:text="钱包余额"
            android:gravity="center_horizontal|center_vertical"
            />
        <TextView
            android:id="@+id/money"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="20%"
            android:gravity="center_horizontal|center_vertical"
            android:text="￥1000.00"
            android:textColor="@android:color/holo_red_light"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/chongzhi"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:background="#fade05"
                android:gravity="center_horizontal|center_vertical"
                android:text="充值" />

            <TextView
                android:id="@+id/tixian"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/chongzhi"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="63dp"
                android:layout_marginRight="63dp"
                android:background="#f5f0f0"
                android:gravity="center_horizontal|center_vertical"
                android:text="提现" />
        </RelativeLayout>
    </com.example.huanpet.custom.PercentLinearLayout>
    <!--"分割线"-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="3%"
        android:background="#d7d5d5"/>
    <com.example.huanpet.custom.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="25%"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/myzhifubao"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="33%">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/alipay" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="23dp"
                android:layout_marginStart="23dp"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:text="我的支付宝" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/textView3"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/img_go" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/myyouhuiquan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="33%">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:src="@drawable/coupon" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:text="我的优惠券" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:src="@drawable/img_go" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/myjifen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="33%"
            >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="26dp"
                android:layout_marginStart="26dp"
                android:src="@drawable/gold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:text="我的积分" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageView4"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/img_go" />
        </RelativeLayout>
    </com.example.huanpet.custom.PercentLinearLayout>
</com.example.huanpet.custom.PercentLinearLayout>
