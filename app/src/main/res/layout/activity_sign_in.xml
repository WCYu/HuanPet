<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/header_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:minWidth="@dimen/dp25"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp10"
            android:scaleType="center"
            android:src="@drawable/back" />

        <Button
            android:id="@+id/header_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/dp10"
            android:paddingTop="@dimen/dp10"
            android:text="注册"
            android:onClick="click"
            android:background="@android:color/transparent"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp20" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="欢迎你加入宠物寄养"
            android:textColor="@color/white"
            android:textSize="@dimen/sp30"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp30"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:background="@drawable/input_bar_bg_normal"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="@dimen/dp7"
            android:textColor="@color/edit_font_color"
            android:textSize="@dimen/sp18" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/edit_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:background="@drawable/input_bar_bg_normal"
            android:hint="@string/input_pwd_hint"
            android:padding="@dimen/dp7"
            android:password="true"
            android:textColor="@color/edit_font_color"
            android:textSize="@dimen/sp18" />

        <Button
            android:id="@+id/btn_find_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edit_pwd"
            android:layout_alignRight="@+id/edit_pwd"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginRight="4dp"
            android:background="@drawable/get_code"
            android:onClick="click"
            android:padding="5dp"
            android:text="@string/wangji_pwd"
            android:textColor="@color/yellow01"
            android:textSize="13sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="@dimen/dp30"
        android:background="@drawable/login_btn_backgroud"
        android:onClick="click"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="@dimen/dp80"
        android:gravity="center"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/edit_font_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用第三方账号登录"
            android:textColor="@color/edit_font_color"
            android:textSize="@dimen/sp18" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/edit_font_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/main_login_qq"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="click"
            android:src="@drawable/login_qq" />

        <ImageView
            android:id="@+id/main_login_wachat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/login_weixin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/login_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ"
            android:onClick="click"
            android:textColor="@color/edit_font_color"
            android:textSize="@dimen/sp18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="微信"
            android:textColor="@color/edit_font_color"
            android:textSize="@dimen/sp18" />
    </LinearLayout>

</LinearLayout>