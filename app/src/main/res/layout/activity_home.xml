<?xml version="1.0" encoding="utf-8"?>
<com.example.huanpet.custom.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main.HomeActivity">
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/home_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 主页面布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.huanpet.utils.CustomTool
                android:id="@+id/home_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.example.huanpet.utils.CustomTool>
            <ImageView
                android:id="@+id/home_spreads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/my"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                />
            <android.support.v7.widget.SearchView
                android:id="@+id/home_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:queryHint="地区/街道/小区">

            </android.support.v7.widget.SearchView>
        </android.support.percent.PercentRelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:button="@null"
                        android:drawableRight="@drawable/options_check"
                        android:textSize="16sp"
                        android:text="附近优先"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="16sp"
                        android:drawableRight="@drawable/options_check"
                        android:button="@null"
                        android:text="宠物类型"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableRight="@drawable/options_check"
                        android:button="@null"
                        android:textSize="16sp"
                        android:text="筛选"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

        <!--android:layout_gravity="start" 侧滑布局 -->
    <LinearLayout
        android:id="@+id/home_hides"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        >
        <com.example.huanpet.custom.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="90%"
                android:background="@android:color/white"
                android:orientation="vertical">
                <com.example.huanpet.custom.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/main_user"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_heightPercent="10%"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_launcher"/>
                        <LinearLayout
                            android:layout_marginLeft="10px"
                            android:layout_gravity="center"
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="name"
                                />
                            <TextView
                                android:layout_marginTop="10px"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="poph"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/img_go"
                            />
                    </LinearLayout>

                    <View
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@android:color/darker_gray"
                        />
                    <LinearLayout
                        android:id="@+id/main_news"
                        app:layout_heightPercent="6%"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/messages"/>
                        <TextView
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="消息"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/main_pet"
                        app:layout_heightPercent="6%"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/pet"/>
                        <TextView
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="宠物"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/main_order"
                        app:layout_heightPercent="6%"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/order_details"/>
                        <TextView
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/main_purse"
                        app:layout_heightPercent="6%"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/collection_account"/>
                        <TextView
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="钱包"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/main_know"
                        app:layout_heightPercent="6%"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/know"/>
                        <TextView
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="需知"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/main_set"
                        app:layout_heightPercent="6%"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_marginBottomPercent="10%"
                        >
                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/setting"/>
                        <TextView
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设置"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/main_btn"
                        app:layout_heightPercent="6%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:background="@drawable/search_input_box"
                        android:text="申请成为寄养家庭"
                        />
                </com.example.huanpet.custom.PercentLinearLayout>
            </LinearLayout>
        </com.example.huanpet.custom.PercentLinearLayout>
    </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</com.example.huanpet.custom.PercentLinearLayout>
