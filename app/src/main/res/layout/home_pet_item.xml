<?xml version="1.0" encoding="utf-8"?>
<com.example.huanpet.custom.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pet_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="20%"
        android:src="@drawable/pet_icon"
        />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/pet_name"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="petname"/>
    </LinearLayout>
    <TextView
        android:id="@+id/pet_price"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="petprice"
        android:textSize="20sp"
        app:layout_widthPercent="20%"
        />
</com.example.huanpet.custom.PercentLinearLayout>