<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.huanpet.view.main.view.foster_families.FosterHomeActivity">

    <com.example.huanpet.utils.CustomTool
        android:id="@+id/fosterhome_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.huanpet.utils.CustomTool>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <com.example.huanpet.custom.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="真实姓名"
                        app:layout_widthPercent="30%" />

                    <EditText
                        android:id="@+id/fosterhome_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="输入寄养姓名"
                        app:layout_widthPercent="70%" />
                </com.example.huanpet.custom.PercentLinearLayout>

                <com.example.huanpet.custom.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="电话号码"
                        app:layout_widthPercent="30%" />

                    <EditText
                        android:id="@+id/fosterhome_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="输入寄养电话"
                        app:layout_widthPercent="70%" />
                </com.example.huanpet.custom.PercentLinearLayout>

                <com.example.huanpet.custom.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="家庭地址"
                        app:layout_widthPercent="30%" />

                    <EditText
                        android:id="@+id/fosterhome_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="输入寄养家庭地址"
                        app:layout_widthPercent="70%" />
                </com.example.huanpet.custom.PercentLinearLayout>
            </LinearLayout>

            <com.example.huanpet.custom.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <com.example.huanpet.custom.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="身份证号"
                        app:layout_widthPercent="30%" />

                    <EditText
                        android:id="@+id/fosterhome_Identificationcard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="输入有效身份证号"
                        app:layout_widthPercent="70%" />
                </com.example.huanpet.custom.PercentLinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="身份证照片(正面)"
                    app:layout_widthPercent="48%" />

                <ImageView
                    android:id="@+id/fosterhome_Identificationcardimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_id_card"
                    app:layout_widthPercent="48%" />
            </com.example.huanpet.custom.PercentLinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:text="可寄养宠物类型" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.huanpet.custom.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <CheckBox
                        android:id="@+id/fosterhome_check1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/coose"
                        android:gravity="center"
                        android:text="幼犬"
                        android:textSize="15sp"
                        app:layout_widthPercent="24%" />

                    <EditText
                        android:id="@+id/fosterhome_check_et1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="请输入价格"
                        app:layout_widthPercent="55%" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元/天" />
                </com.example.huanpet.custom.PercentLinearLayout>

                <com.example.huanpet.custom.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <CheckBox
                        android:id="@+id/fosterhome_check2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/coose"
                        android:gravity="center"
                        android:text="小犬"
                        android:textSize="15sp"
                        app:layout_widthPercent="24%" />

                    <EditText
                        android:id="@+id/fosterhome_check_et2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="请输入价格"
                        app:layout_widthPercent="55%" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元/天" />
                </com.example.huanpet.custom.PercentLinearLayout>

                <com.example.huanpet.custom.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <CheckBox
                        android:id="@+id/fosterhome_check3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/coose"
                        android:gravity="center"
                        android:text="中型犬"
                        android:textSize="15sp"
                        app:layout_widthPercent="24%" />

                    <EditText
                        android:id="@+id/fosterhome_check_et3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="请输入价格"
                        app:layout_widthPercent="55%" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元/天" />
                </com.example.huanpet.custom.PercentLinearLayout>

                <com.example.huanpet.custom.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <CheckBox
                        android:id="@+id/fosterhome_check4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/coose"
                        android:gravity="center"
                        android:text="大型犬"
                        android:textSize="15sp"
                        app:layout_widthPercent="24%" />

                    <EditText
                        android:id="@+id/fosterhome_check_et4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="请输入价格"
                        app:layout_widthPercent="55%" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元/天" />
                </com.example.huanpet.custom.PercentLinearLayout>

                <com.example.huanpet.custom.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <CheckBox
                        android:id="@+id/fosterhome_check5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/coose"
                        android:gravity="center"
                        android:text="猫咪"
                        android:textSize="15sp"
                        app:layout_widthPercent="24%" />

                    <EditText
                        android:id="@+id/fosterhome_check_et5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="请输入价格"
                        app:layout_widthPercent="55%" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元/天" />
                </com.example.huanpet.custom.PercentLinearLayout>

                <com.example.huanpet.custom.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <CheckBox
                        android:id="@+id/fosterhome_check6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/coose"
                        android:gravity="center"
                        android:text="其他"
                        android:textSize="15sp"
                        app:layout_widthPercent="24%" />

                    <EditText
                        android:id="@+id/fosterhome_check_et6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="请输入价格"
                        app:layout_widthPercent="55%" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元/天" />
                </com.example.huanpet.custom.PercentLinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:text="可提供其他服务/价格" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.huanpet.custom.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <CheckBox
                        android:id="@+id/fosterhome_check7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/coose"
                        android:gravity="center"
                        android:text="洗澡"
                        android:textSize="15sp"
                        app:layout_widthPercent="24%" />

                    <EditText
                        android:id="@+id/fosterhome_check_et7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="请输入价格"
                        app:layout_widthPercent="55%" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元/天" />
                </com.example.huanpet.custom.PercentLinearLayout>

                <com.example.huanpet.custom.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <CheckBox
                        android:id="@+id/fosterhome_check8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/coose"
                        android:gravity="center"
                        android:text="接送"
                        android:textSize="15sp"
                        app:layout_widthPercent="24%" />

                    <EditText
                        android:id="@+id/fosterhome_check_et8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="请输入价格"
                        app:layout_widthPercent="55%" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元/天" />
                </com.example.huanpet.custom.PercentLinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:text="寄养师介绍" />

            <com.example.huanpet.custom.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="我的昵称"
                    app:layout_widthPercent="30%" />

                <EditText
                    android:id="@+id/fosterhome_checkname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="输入寄养昵称"
                    app:layout_widthPercent="70%" />
            </com.example.huanpet.custom.PercentLinearLayout>

            <com.example.huanpet.custom.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:text="我的介绍" />
                <EditText
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="top"
                    android:background="@drawable/biankung_hei"
                    app:layout_widthPercent="90%" />
            </com.example.huanpet.custom.PercentLinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:text="上传图片" />

            <com.example.huanpet.custom.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white">

                <com.example.huanpet.custom.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/fosterhome_fosterimg"
                        app:layout_widthPercent="40%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_photos"/>

                    <TextView
                        app:layout_widthPercent="50%"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上传1张寄养师本人正面居家照(宠物店上传营业执照)审核备案不公开" />
                </com.example.huanpet.custom.PercentLinearLayout>

                <TextView
                    app:layout_widthPercent="90%"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传展示照片,不少于3张环境照,必须包括宠物室内及室外活动区(其他照片展示不限)"/>

                <com.example.huanpet.custom.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <ImageView
                        android:id="@+id/fosterhome_environmentimg"
                        app:layout_widthPercent="30%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_photos"/>
                </com.example.huanpet.custom.PercentLinearLayout>

                <com.example.huanpet.custom.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <CheckBox
                        android:id="@+id/fosterhome_isconsent"
                        app:layout_widthPercent="20%"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="同意"
                        android:button="@drawable/ischeck"/>
                    <TextView
                        android:id="@+id/fosterhome_userprotocol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《双方寄养服务协议》"
                        android:textColor="@color/cheng"/>
                </com.example.huanpet.custom.PercentLinearLayout>
                <Button
                    android:id="@+id/fosterhome_determine"
                    android:layout_gravity="center"
                    app:layout_widthPercent="90%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jiyang_item"
                    android:text="确定"/>
            </com.example.huanpet.custom.PercentLinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
